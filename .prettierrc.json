{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "useTabs": false,
  "arrowParens": "always",
  "trailingComma": "all",
  "bracketSameLine": false,
  "importOrder": [
    "^@api/(.*)$",
    "^@assets/(.*)$",
    "^@components/(.*)$",
    "^@layouts/(.*)$",
    "^@pages/(.*)$",
    "^@plugins/(.*)$",
    "^@stores/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "tailwindConfig": "./tailwind.config.js",
  "yaml": {
    "indent": 2,
    "alignObjects": false
  }
}
